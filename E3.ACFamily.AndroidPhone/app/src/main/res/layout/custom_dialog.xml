<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.7dp"
                android:layout_marginBottom="16.7dp"
                android:textSize="20dp"
                android:textColor="#292929"
                android:textStyle="bold"
                android:text="@string/alert_ble_title"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/top_line"
            android:layout_below="@id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"/>



        <RelativeLayout
            android:id="@+id/mid_layout"
            android:layout_below="@id/top_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/icon_bluetooth"
                />

            <TextView
                android:id="@+id/dialog_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_icon"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12.7dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/alert_ble_message"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/two_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mid_layout"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_layer_l_n"
                android:gravity="center"
                android:text="@string/common_cancel"
                android:textColor="#a9a9a9"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_layer_r_n"
                android:gravity="center"
                android:text="@string/common_ok"
                android:textColor="#1fc4ba"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_btn_layout"
            android:visibility="gone"
            android:layout_below="@id/mid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_one_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#1fc4ba"
                android:background="@drawable/btn_layer_r_n"
                android:text="@string/common_ok"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
