<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="20dp"
        android:textColor="#292929"
        android:text="title"
        android:visibility="gone"
        />
    <View
        android:id="@+id/view_dialog_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_dialog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_pin"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_dialog_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#4b4d4e"
        android:text="@string/common_off_location_info"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialog_btn_layout"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/btn_dialog_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:textSize="20dp"
            android:textColor="@color/color_btn_dialog_selector"
            android:text="취소"
            android:background="@android:color/transparent"
            android:visibility="gone"
            />
        <View
            android:id="@+id/line_dialog_bottom"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"/>
        <Button
            android:id="@+id/btn_dialog_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:textSize="20dp"
            android:textColor="@color/color_btn_dialog_selector"
            android:text="확인"
            android:background="@android:color/transparent"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>


