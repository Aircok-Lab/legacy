<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:gravity="center_vertical"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/btn_header_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/btn_nav_menu_n"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/postion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ic_postion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_position"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/postion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3.7dp"
            android:textSize="14.7dp"
            android:textColor="#ffffff"
            android:text="@string/common_no_location"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3.7dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text=""/>

    </LinearLayout>


    <ImageView
        android:visibility="invisible"
        android:id="@+id/nav_batterry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="48dp"
        android:src="@drawable/btn_nav_battery_0_n"
        android:background="@android:color/transparent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/nav_charging_batterry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="48dp"
        android:src="@drawable/btn_nav_battery_charging"
        android:background="@android:color/transparent" />


    <ImageView
        android:id="@+id/btn_nav_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:src="@drawable/btn_nav_share_n"
        android:background="@android:color/transparent" />

</RelativeLayout>