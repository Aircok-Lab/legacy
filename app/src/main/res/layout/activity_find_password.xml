<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_header"
        layout="@layout/view_header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/forget_pw"
        android:layout_marginTop="76dp"
        android:textColor="#4b4d4e"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/to_email"
        android:layout_marginTop="102.7dp"
        android:textColor="#777f7e"
        android:textSize="12.7dp"/>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:hint="@string/input_email_plz"
        android:paddingLeft="16dip"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="18dp"
        android:background="@drawable/edittext_selector"/>

    <Button
        android:id="@+id/btn_send_email"
        android:layout_below="@id/input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:background="@drawable/btn_blue_selector"
        android:text="@string/reset_pw"
        android:textColor="#ffffff"
        android:textSize="18dp"/>

</RelativeLayout>
