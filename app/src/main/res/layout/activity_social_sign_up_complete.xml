<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_member"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_header"
        layout="@layout/view_header" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/member_logo"
        android:layout_marginTop="51.3dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/signup_guide1"
        android:textSize="24dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginTop="90.7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777f7e"
            android:textSize="12.7dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="15.7dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/signup_guide2"/>

        <EditText
            android:id="@+id/input_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="40dp"
            android:hint="@string/common_birth"
            android:paddingLeft="16dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="18dp"
            android:background="@drawable/edittext_selector"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30.7dp"
            android:onClick="onClick"
            android:gravity="center"
            android:minHeight="48dp"
            android:background="@drawable/btn_blue_selector"
            android:text="@string/common_ok"
            android:textColor="#ffffff"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>
