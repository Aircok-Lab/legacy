<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.baby.aircok.acbaby.menu.HealthHistoryActivity">


    <include
        android:id="@+id/layout_header"
        layout="@layout/view_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageButton
            android:id="@+id/btn_calendar_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/btn_date_pre"
            android:background="@android:color/transparent"
            />
        <TextView
            android:id="@+id/tv_calendar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="20dp"
            android:textColor="#a0a0a0"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />
        <ImageButton
            android:id="@+id/btn_calendar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/btn_date_next"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <com.baby.aircok.acbaby.common.widget.CXCalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
