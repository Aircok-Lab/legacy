<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.7dp"
                android:layout_marginBottom="16.7dp"
                android:textSize="20dp"
                android:textColor="#292929"
                android:textStyle="bold"
                android:text="블루투스 설정"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/top_line"
            android:layout_below="@id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"/>



        <RelativeLayout
            android:id="@+id/mid_layout"
            android:layout_below="@id/top_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/icon_bluetooth"
                />

            <TextView
                android:id="@+id/dialog_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_icon"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12.7dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="블루투스 기능이 꺼져있습니다.\nAIRCOK 서비스 이용이 가능하도록\n설정을 변경하시겠습니까?"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/two_btn_layout"
            android:visibility="gone"
            android:layout_below="@id/mid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#a9a9a9"
                android:text="@string/common_cancel"
                android:background="@drawable/btn_layer_l_n"/>


            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"/>

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#0fb4e7"
                android:background="@drawable/btn_layer_r_n"
                android:text="@string/common_ok"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_btn_layout"
            android:visibility="gone"
            android:layout_below="@id/mid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_one_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#0fb4e7"
                android:background="@drawable/btn_layer_r_n"
                android:text="@string/common_ok"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
